<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="navbar navbar-fixed-top"> <!--- fixed navbar on top -->
		<div class='navbar-inner'>
			<div class ='container'> <!--- navbar 3 divs -->
				<a href='#' class='brand'>Treebook</a> <!--- Brand Treebook -->
				<ul class ='nav'>
					<li><%= link_to "All Statuses", feed_path%></li>
				</ul>
				<ul class = 'nav pull-right'>
					<% if user_signed_in? %>
						<li><%= link_to current_user.first_name, edit_user_registration_path %></li>
						<li><%= link_to "Log Out", logout_path %></li>
					<% else %>
						<li><%= link_to "Register", register_path %></li>
						<li><%= link_to "Login", login_path %></li>
					<% end %>

			</div>

			</div>
		</div>
	</div>

	<div class="container"> <!--- centered -->
		<% flash.each do |type, message| %>
		    <div class="alert <%= flash_class(type.to_s) %>">
		        <button class="close" data-dismiss="alert">x</button>
		        <%= message %>
		    </div>
		<% end %>


		<%= yield %>
	</div>

</div>
</body>
</html>

